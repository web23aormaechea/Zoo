@model Arraza

<form method="post">
    <input asp-for="ID" hidden />
    <div clasModelOnlys="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Ezabatu Arraza</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Izena" class="p-0"></label>
            <input asp-for="Izena" disabled class="form-control" />
            <span asp-validation-for="Izena" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Mota" class="p-0"></label>
            <input asp-for="Mota" disabled class="form-control" />
            <span asp-validation-for="Mota" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Arraza" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>

</form>


